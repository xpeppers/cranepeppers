{
  "builders": [
    {
      "type": "docker",
      "image": "ruby:2.2",
      "commit": true
    }
  ],

  "provisioners": [
    {
      "type": "chef-solo",
      "cookbook_paths": ["berks-cookbooks"],
      "run_list": [ "railspeppers::rails" ],
      "prevent_sudo": true
    }
  ],

  "post-processors": [
    {
      "type": "docker-tag",
      "repository": "orioneteam/rails",
      "tag": "0.1.0"
    },
    "docker-push"
  ]
}
